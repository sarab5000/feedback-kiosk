<% layout('layout/boilerplate') -%>

  <div class="row justify-content-center align-items-center" style="height: 100%;">
    <div class="d-flex col-4 justify-content-center">
      <input id="sad" type="image" src="/imgs/sad.gif" class="img-fluid" data-toggle="modal"
        data-target="#exampleModalCenter" width="70%"/>
    </div>
    <div class="d-flex col-4 justify-content-center">
      <input id="neutral" type="image" src="/imgs/neutral.gif" class="img-fluid" data-toggle="modal"
        data-target="#exampleModalCenter" width="70%"/>
    </div>
    <div class="d-flex col-4 justify-content-center">
      <input id="happy" type="image" src="/imgs/happy.gif" class="img-fluid" data-toggle="modal"
        data-target="#exampleModalCenter" width="70%"/>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">لقد تم تسجيل اختيارك</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          شكرا لك - رأيك يساعدنا في تحسين خدماتنا
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">حسنا</button>
        </div>
      </div>
    </div>
  </div>

