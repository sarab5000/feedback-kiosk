<% layout('layout/boilerplate') -%>

    <div class="row justify-content-center">
        <div class="col-4">
            <input id="sad" type="image" src="/imgs/sad_face.jpg" class="img-fluid" data-toggle="modal" data-target="#exampleModalCenter"/>
        </div>
        <div class="col-4">
            <input id="neutral" type="image" src="/imgs/neutral_face.jpg" class="img-fluid" data-toggle="modal" data-target="#exampleModalCenter"/>
        </div>
        <div class="col-4">
            <input id="happy" type="image" src="/imgs/happy_face.jpg" class="img-fluid" data-toggle="modal" data-target="#exampleModalCenter"/>
        </div>
    </div>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">لقد تم تسجيل اختيارك</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          شكرا لك - رأيك يساعدنا في تحسين خدماتنا
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">حسنا</button>
        </div>
      </div>
    </div>
  </div>